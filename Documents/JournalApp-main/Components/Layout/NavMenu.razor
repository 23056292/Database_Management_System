@using JournalApp.Services
@inject StateContainer State
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">JournalApp</a>
        @if (State.IsAuthenticated && State.CurrentUser != null)
        {
            <span class="text-white">Welcome, @State.CurrentUser.Username!</span>
        }
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        @if (!State.IsAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="register">
                    <span class="bi bi-person-plus-fill-nav-menu" aria-hidden="true"></span> Register
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> Login
                </NavLink>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="dashboard">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Dashboard
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="profile">
                    <span class="bi bi-person-circle-nav-menu" aria-hidden="true"></span> Profile
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="journal">
                    <span class="bi bi-journal-text-nav-menu" aria-hidden="true"></span> My Journals
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="journal/new">
                    <span class="bi bi-plus-circle-fill-nav-menu" aria-hidden="true"></span> New Journal
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="calendar">
                    <span class="bi bi-calendar-week-nav-menu" aria-hidden="true"></span> Calendar
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <a class="nav-link" href="#" @onclick="Logout">
                    <span class="bi bi-box-arrow-left-nav-menu" aria-hidden="true"></span> Logout
                </a>
            </div>
        }
    </nav>
</div>

@code {
    private async Task Logout()
    {
        State.ClearCurrentUser();
        // Navigate to login page after logout
        Navigation.NavigateTo("/login");
    }
}