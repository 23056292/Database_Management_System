@page "/dashboard"
@using System.Globalization
@inject NavigationManager Nav

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-primary text-white rounded">
        <h3 class="m-0">ðŸ““ MyJournal</h3>
        <div>
            <button class="btn btn-light btn-sm me-2" @onclick="ToggleTheme">
                <i class="fas fa-palette"></i>
            </button>
            <button class="btn btn-light btn-sm" @onclick="ShowSearch">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>

    <!-- Welcome Section -->
    <div class="mb-4">
        <h4>Welcome back, Prabhat!</h4>
        <p>Here's your journaling overview</p>
        <small class="text-primary">@CurrentDate</small>
    </div>

    <!-- Stats Grid -->
    <div class="row row-cols-1 row-cols-md-2 g-3 mb-4">
        <div class="col">
            <div class="card border-top border-warning shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Current Streak ðŸ”¥</h5>
                    <h3 class="card-text">14</h3>
                    <small class="text-muted">Longest: 42 days â€¢ Missed: 3 days</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card border-top border-success shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Dominant Mood</h5>
                    <h3 class="card-text">Positive</h3>
                    <small class="text-muted">Most frequent: Happy</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card border-top border-primary shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Entries</h5>
                    <h3 class="card-text">187</h3>
                    <small class="text-muted">Started: Jan 15, 2024</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card border-top border-info shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Words</h5>
                    <h3 class="card-text">42.5k</h3>
                    <small class="text-muted">Avg: 228 words/entry</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Mood Distribution -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h5>Mood Distribution (Last 30 days)</h5>
            <div class="mb-2">
                <div class="d-flex justify-content-between">
                    <span>Positive</span>
                    <span>62%</span>
                </div>
                <div class="progress">
                    <div class="progress-bar bg-success" style="width:62%"></div>
                </div>
            </div>
            <div class="mb-2">
                <div class="d-flex justify-content-between">
                    <span>Neutral</span>
                    <span>24%</span>
                </div>
                <div class="progress">
                    <div class="progress-bar bg-warning" style="width:24%"></div>
                </div>
            </div>
            <div>
                <div class="d-flex justify-content-between">
                    <span>Negative</span>
                    <span>14%</span>
                </div>
                <div class="progress">
                    <div class="progress-bar bg-danger" style="width:14%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Entries -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="m-0">Recent Entries</h5>
                <button class="btn btn-link p-0" @onclick="@(() => NavigateTo("journal-list"))">View All</button>
            </div>
            @foreach (var entry in RecentEntries)
            {
                <div class="d-flex justify-content-between align-items-center border-bottom py-2" @onclick="@(() => OpenEntry(entry.Id))" style="cursor:pointer;">
                    <span>@entry.Date.ToString("MMM dd")</span>
                    <span class="badge @entry.MoodClass">@entry.Mood</span>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private string CurrentDate => DateTime.Now.ToString("dddd, MMMM dd, yyyy", CultureInfo.InvariantCulture);

    private List<JournalEntry> RecentEntries = new List<JournalEntry>
    {
        new() { Id=1, Date=DateTime.Today, Mood="Happy", MoodClass="bg-success" },
        new() { Id=2, Date=DateTime.Today.AddDays(-1), Mood="Thoughtful", MoodClass="bg-warning" },
        new() { Id=3, Date=DateTime.Today.AddDays(-2), Mood="Excited", MoodClass="bg-success" },
        new() { Id=4, Date=DateTime.Today.AddDays(-3), Mood="Stressed", MoodClass="bg-danger" }
    };

    private void ToggleTheme()
    {
        // For demo only: you can implement actual dark mode toggle
        Console.WriteLine("Theme toggled");
    }

    private void ShowSearch()
    {
        Console.WriteLine("Search clicked");
    }

    private void NavigateTo(string page)
    {
        Nav.NavigateTo($"/{page}");
    }

    private void OpenEntry(int entryId)
    {
        Nav.NavigateTo($"/journal-entry/{entryId}");
    }

    public class JournalEntry
    {
        public int Id { get; set; }
        public DateTime Date { get; set; }
        public string Mood { get; set; } = "";
        public string MoodClass { get; set; } = "";
    }
}
